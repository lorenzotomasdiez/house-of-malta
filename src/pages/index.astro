---
import '@/styles/global.css'
import Layout from '@/layouts/Layout.astro'
import Hero from '@/sections/Hero.astro'
import TopPosters from '@/sections/TopPosters'
import AllPosters from '@/sections/AllPosters.astro'
import WhereToFindUs from '@/sections/WhereToFindUs.astro'
import WhoWeAre from '@/sections/WhoWeAre.astro'
import Quality from '@/sections/Quality.astro'
import Footer from '@/sections/Footer.astro'
---

<Layout title="House of Gozo">
  <div class="flex flex-col gap-[30px] lg:gap-[100px] bg-primary">
    <Hero />
    <TopPosters client:load />
    <div class="w-10/12 mx-auto">
      <div class="h-[1px] w-full bg-neutral-700"></div>
    </div>
    <AllPosters />
    <div class="w-10/12 mx-auto">
      <div class="h-[1px] w-full bg-neutral-700"></div>
    </div>
    <WhereToFindUs />
    <div class="w-10/12 mx-auto">
      <div class="h-[1px] w-full bg-neutral-700"></div>
    </div>
    <WhoWeAre />
    <div class="w-10/12 mx-auto">
      <div class="h-[1px] w-full bg-neutral-700"></div>
    </div>
    <Quality />
    <Footer />
  </div>
</Layout>
