---
interface Props {
  href: string
  class?: string
}

const { href, class: classList }: Props = Astro.props
---

<a
  href={href}
  class:list={[
    'h-full flex items-center justify-center transition-all duration-300 hover:border-b-2 hover:border-white text-white',
    classList,
  ]}
>
  <span class:list={['text-lg font-normal text-inherit']}>
    <slot />
  </span>
</a>
