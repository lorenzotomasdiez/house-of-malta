---
type Item = {
  icon: string
  title: string
  description: string
}
const items: Item[] = [
  {
    icon: '/icons/pencil-weird.svg',
    title: 'Unique Designs',
    description:
      'Our posters are crafted with care and attention to detail, ensuring that each one is a true representation of the Maltese Islands.',
  },
  {
    icon: '/icons/product-quality.svg',
    title: 'Premium Quality',
    description:
      'We use only the highest quality materials and printing techniques to ensure that our posters are of the highest quality.',
  },
  {
    icon: '/icons/diamond.svg',
    title: 'Customer Satisfaction',
    description:
      'We are committed to ensuring that our customers are satisfied with their purchase. If you are not satisfied with your purchase, we will refund your money.',
  },
]
---

<section class="container mx-auto px-[50px]" id="quality">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
    {
      items.map((item) => (
        <div class="flex flex-col justify-center items-center gap-4 bg-primary-lighter py-14 px-9 rounded-xl text-center">
          <img
            src={item.icon}
            alt={item.title}
            class="w-[113px] aspect-square text-secondary bg-white rounded-xl p-2"
          />
          <h3 class="text-2xl font-semibold text-secondary">{item.title}</h3>
          <p class="text-lg text-secondary">{item.description}</p>
        </div>
      ))
    }
  </div>
</section>
